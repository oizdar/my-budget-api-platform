<!--                </join-columns>-->
<!--                <inverse-join-columns>-->
<!--                    <join-column name="plan_configuration_id"/>-->
<!--                </inverse-join-columns>-->
<!--            </join-table>-->
<!--        </many-to-many>-->


        <many-to-many field="transactions" target-entity="Transaction">
            <cascade>
                <cascade-all />
            </cascade>
            <join-table name="budgetTransactions">
                <join-columns>
                    <join-column name="budget_id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="transaction_id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>
</doctrine-mapping>
